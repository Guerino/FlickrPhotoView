<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tdm.view.photo.flickr.flickrphotoview.AboutActivity"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="5">

    <TextView
        android:text="Universidad Tecnologica Nacional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txv_title_utn"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:typeface="sans"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_weight="0.7"/>

    <TextView
        android:text="Facultad Regional Cordoba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/txv_title_frc"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:typeface="sans"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_weight="0.7"/>

    <TextView
        android:text="Tecnologia de aplicaciones moviles"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.5"
        android:id="@+id/txv_title_materia"
        android:gravity="center"
        android:textAlignment="center"
        android:typeface="sans"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_marginTop="15sp"/>

    <TextView
        android:layout_marginTop="30sp"
        android:text=" Palacios, Javier GÃ¼erino \n Legajo: 55624\n e-mail: pjg@outlook.com.ar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:typeface="sans"
        android:textSize="16sp"
        android:id="@+id/txv_student" />

    <TextView
        android:layout_marginTop="30sp"
        android:text="version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="2"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:typeface="sans"
        android:textSize="16sp"
        android:id="@+id/txv_app_version" />

</LinearLayout>
