<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dip">

    <ImageView
        android:id="@+id/img_directory"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dip"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher"
        android:padding="3dp"/>

    <TextView
        android:id="@+id/lbl_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/img_directory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Album Verano"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="16dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lbl_photos"
        android:layout_toRightOf="@id/img_directory"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lbl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:text="Fotos"
        android:typeface="sans"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lbl_views"
        android:layout_toRightOf="@id/img_directory"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lbl_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:text="Visitas"
        android:typeface="sans"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lbl_comments"
        android:layout_toRightOf="@id/img_directory"
        android:layout_below="@id/lbl_views"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:text="Comentarios"
        android:typeface="sans"
        android:textSize="14sp" />

</RelativeLayout>



